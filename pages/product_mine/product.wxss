image {
    display: block;
    width: auto;
    height: auto;
}

.swiper-tab {
    width: 750rpx;
    height: 90rpx;
    white-space: nowrap;
    display: flex;
    overflow: auto;
    background-color: #fff;
    border-bottom: 1px solid #e5e5e5;
    position: fixed;
    left: 0;
    top: 0;
    z-index: 999;
}

.swiper-tab-list {
    font-size: 30rpx;
    display: inline-block;
    color: #000;
    padding: 24rpx 24rpx;
    margin-left: 50rpx;
}

.on {
    padding: 12rpx 24rpx;
    color: #f1312f;
    border-bottom: 8rpx solid #f1312f;
}

.swiper-box {
    display: block;
    width: 100%;
    overflow-x: hidden;
    overflow-y: scroll;
}

.shoppingList {
    width: 100%;
    height: 624rpx;
    background-color: #fff;
    margin-bottom: 20rpx;
}

.shoppingList image {
    width: 710rpx;
    height: 400rpx;
    margin: 20rpx;
}

.shoppingList .shoppingList_title {
    margin: -10rpx 20rpx 10rpx;
    font-size: 18px;
    width: 100%;
    float: left;
}

.shoppingList .shoppingList_PriceStart {
    width: 100%;
    margin: 0rpx 20rpx;
    float: left;
    font-size: 14px;
    color: #999;
}

.shoppingList .shoppingList_PriceEnd {
    width: 100%;
    margin: 0 20rpx;
    float: left;
    font-size: 14px;
    color: #ef312e;
    display: flex;
    justify-content: flex-start;
    align-items: center;
}

.shoppingList .shoppingList_PriceEnd .PriceEndNum {
    font-size: 24px;
    font-weight: bold;
}

.shoppingList .shoppingList_PriceEnd .SupeValue {
    font-size: 10px;
    font-weight: bold;
    padding: 0 5px;
    color: #ef312e;
    border: 1px solid #ef312e;
    margin-left: 10rpx;
    -webkit-border-radius: 3px;
    -moz-border-radius: 3px;
    border-radius: 3px;
}

.shoppingList .shoppingList_PriceEnd .ShareFriend {
    color: #999;
}

.content {
    width: 100%;
    height: 280rpx;
    background-color: #fff;
    position: relative;
    margin-bottom: 20rpx;
}

.content:first-child {
    margin-top: 110rpx;
}

.content::after {
    content: '';
    width: 690rpx;
    height: 2rpx;
    background-color: #eee;
    position: absolute;
    bottom: 0;
    left: 30rpx;
}

.image_border {
    width: 220rpx;
    height: 220rpx;
    margin: 30rpx;
    float: left;
    padding-right: 18rpx;
    overflow: hidden;
    position: relative;
}

.image_border image {
    width: 390rpx;
    height: 220rpx;
    position: absolute;
    left: -86rpx;
    top: 0;
}

.button_area {
    display: flex;
    justify-content: flex-start;
    align-items: center;
    margin-top: 40rpx;
}

.content .content_inner {
    padding: 30rpx 0;
    display: flex;
    justify-content: flex-start;
    align-items: flex-start;
    flex-direction: column;
}

.content_title {
    width: 360rpx;
    line-height: 36rpx;
    color: #000;
    margin-top: 20rpx;
}

.content_score {
    margin-top: 20rpx;
    color: #f23030;
}

.btn_change {
    width: 170rpx;
    height: 54rpx;
    text-align: right;
    line-height: 54rpx;
    color: #f23030;
    font-size: 16px;
    margin-top: 20rpx;
    -webkit-border-radius: 3px;
    -moz-border-radius: 3px;
    border-radius: 3px;
    margin-left: 30rpx;
}

.button_hover {
    color: #fff;
    background-color: #f23030;
    border: 1px solid #f23030;
}

.gray_hover {
    background: #eaeaea;
}