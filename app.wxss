/**app.wxss**/

@import 'weui.wxss';
.container {
    background: #f0eff5;
}

Page {
    background: #f0eff5;
}

.gray_hover {
    background: #000;
}

.cells {
    margin-top: 20rpx;
}

.cell {
    width: 100%;
    height: 90rpx;
    position: relative;
    background-color: #fff;
    display: flex;
    justify-content: flex-start;
    align-items: center;
}

.cell__bd {
    flex: 1;
    margin-left: 30rpx;
}

.cell__ft {
    padding-right: 30rpx;
}

.cell:after {
    content: '';
    position: absolute;
    height: 2rpx;
    width: 720rpx;
    left: 30rpx;
    bottom: 0;
    background-color: #e5e5e5;
}

.flex {
    display: flex;
    justify-content: flex-start;
    align-items: center;
}